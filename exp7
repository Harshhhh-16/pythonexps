def prime():
 num = int(input("enter any number to check if it is prime or not-->"))
 if(num % 2 == 0 or num % 3 == 0):
 if(num == 2 or num == 3):
 print(f"{num} is a prime number")
 else:
 print(f"{num} is not a prime number")
 else:
 print(f"{num} is a prime number")
prime()

